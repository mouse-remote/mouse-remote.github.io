{
  "manifest_version": 3,
  "name": "Mouse Remote",
  "version": "1.1.0",
  "description": "Control your browser with your phone via WebRTC P2P",
  "permissions": ["debugger", "tabs", "offscreen", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mouse-remote.github.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
